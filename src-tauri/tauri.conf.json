{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PressBoard",
  "version": "0.1.0",
  "identifier": "com.pressboard.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "PressBoard - 3D-Printable PCB Designer",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["pboard"],
        "name": "PressBoard Project",
        "description": "PressBoard PCB Design Project",
        "role": "Editor",
        "mimeType": "application/x-pressboard",
        "icon": "icons/icon.ico"
      }
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Design 3D-printable circuit boards with copper tape channels. Create PCBs without etching, drilling, or soldering - just 3D print and apply copper tape.",
    "shortDescription": "3D-Printable PCB Designer"
  },
  "plugins": {}
}
